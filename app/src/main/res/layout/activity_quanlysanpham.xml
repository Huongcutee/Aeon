<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Admin.QuanlysanphamActivity">

    <TextView
        android:id="@+id/quanlysanpham_txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quản lý sản phẩm"
        android:textColor="@color/xanh_la_cay_dam"
        android:textSize="50dp"
        />

    <Button
        android:id="@+id/quanlysanpham_btn_them"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thêm sản phẩm"
        android:backgroundTint="@color/xanh_la_cay_dam"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_quanlysanpham"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>