<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.VoucherListActivity">
    <TextView
        android:id="@+id/VoucList_Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Danh sách voucher"
        android:textAlignment="center"
        android:textSize="40dp"
        android:layout_marginTop="40dp"
        android:textStyle="bold"/>
    <LinearLayout
        android:id="@+id/VoucList_Linear1"
        android:layout_width="370dp"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:background="@drawable/custom"
        android:layout_marginLeft="10dp">
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="120dp">
    <ImageView
        android:layout_width="70dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        android:src="@drawable/mienphivanchuyen"/>
        <TextView
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:gravity="center"
            android:text="Miễn phí vận chuyển tối đa 30k "
            android:textStyle="bold"
            android:textSize="17sp"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="120dp">
            <View
                android:layout_width="1dp"
                android:layout_height="75dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:background="@drawable/underline" />
            <TextView
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:text="Lấy mã"
                android:gravity="center"
                android:textSize="15sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/VoucList_Linear2"
        android:layout_width="370dp"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:background="@drawable/custom"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="120dp">
            <ImageView
                android:layout_width="70dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:src="@drawable/dodientu"/>
            <TextView
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:gravity="center"
                android:text="Giảm 10% đơn hàng đồ điện tử tối đá 20k "
                android:textStyle="bold"
                android:textSize="17sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="120dp">
            <View
                android:layout_width="1dp"
                android:layout_height="75dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:background="@drawable/underline" />
            <TextView
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:text="Lấy mã"
                android:gravity="center"
                android:textSize="15sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/VoucList_bottomnav"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:labelVisibilityMode="unlabeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#CB387A5C"
        app:menu="@menu/bottom_nav"
        app:itemIconTint="@color/bottomnav_item_color"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
