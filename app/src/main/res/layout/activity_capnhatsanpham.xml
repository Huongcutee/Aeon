
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txt_masp_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã sản phẩm:"
                android:textColor="@color/xanh_la_cay_dam"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/updateproduct_txt_masp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/txt_name_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên sản phẩm:"
                android:textColor="@color/xanh_la_cay_dam"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/updateproduct_edt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/txt_price_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giá sản phẩm:"
                android:textColor="@color/xanh_la_cay_dam"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/updateproduct_edt_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/txt_category_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Danh mục:"
                android:textColor="@color/xanh_la_cay_dam"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/updateproduct_edt_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/txt_origin_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Xuất xứ:"
                android:textColor="@color/xanh_la_cay_dam"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/updateproduct_edt_origin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/txt_description_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mô tả:"
                android:textColor="@color/xanh_la_cay_dam"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/updateproduct_edt_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/txt_favstatus_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yêu thích:"
                android:textColor="@color/xanh_la_cay_dam"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/updateproduct_txt_favstatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/txt_rate_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đánh giá:"
                android:textColor="@color/xanh_la_cay_dam"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/updateproduct_edt_rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp" />

            <ImageView
                android:id="@+id/updateproduct_image"
                android:layout_width="match_parent"
                android:layout_height="133dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/logoaeon" />

            <Button
                android:id="@+id/updateproduct_btn_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/xanh_la_cay_dam"
                android:text="Sửa" />

            <Button
                android:id="@+id/updateproduct_btn_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/xanh_la_cay_dam"
                android:text="Back" />
        </LinearLayout>
    </ScrollView>

