<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.ShopGioHangActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ShopGH_img"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/iconshop"
            />
        <TextView
            android:id="@+id/ShopGH_tvNameshop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:layout_marginTop="-7dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Shop1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/ShopGH_checkboxDH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="84dp"
            android:layout_height="110dp"
            app:cardElevation="25dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="15dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/ShopGH_ImgSP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_launcher_background" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/shopGH_tvThongTin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences|textMultiLine"
                android:text="Áo thun MARVEL Craft Logo Graphic -Sơ mi Dáng Rộng 100% Cotton"
                android:textSize="19sp"
                />
            <TextView
                android:id="@+id/shopGH_tvSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Nâu đậm,L"
                android:textSize="20sp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/shopGH_tvGia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="190.000đ"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    />
                <EditText
                    android:id="@+id/ShopGH_tvSL"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="0001"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>