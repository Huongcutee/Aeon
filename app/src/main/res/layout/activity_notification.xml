<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.NotificationActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thông báo"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_marginTop="60dp"
        android:textStyle="bold"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="84dp"
            android:layout_height="110dp"
            app:cardElevation="25dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="15dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/adidas" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:inputType="textCapSentences|textMultiLine"
                android:text="Bạn vừa nhận được một voucher đến từ cửa hàng Adidas."
                android:textSize="19sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:text="2023-02-08"/>
                <TextView
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:text="11:15:49"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="84dp"
            android:layout_height="110dp"
            app:cardElevation="25dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="15dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/Shop_ImgSP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/saleup" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/shop_tvThongTin"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:inputType="textCapSentences|textMultiLine"
                android:text="SALES UP 50% nhân dịp lễ Quốc Khánh, khuyến mãi áp dụng từ ngày 09/08/2023 - 30/08/2023"
                android:textSize="19sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:text="2023-07-08"/>
                <TextView
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:text="00:00:00"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>