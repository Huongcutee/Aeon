<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".Activity.SignInActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="100dp"
        android:layout_margin="100dp">

        <ImageView
            android:id="@+id/Signin_IMG_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            tools:srcCompat="@drawable/logoaeon" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/Signin_TV_Email"
        android:layout_width="349dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:text="Email:"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/Signin_EDT_Email"
        android:layout_width="360dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:background="@drawable/signin_edit"
        android:ems="10"
        android:hint="abc@gmail.com"
        android:inputType="text"
         />

    <TextView
        android:id="@+id/Signin_TV_PASS"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Mật khẩu:"
        android:textStyle="bold"
        android:textSize="20dp"
        />

    <EditText
        android:id="@+id/Signin_EDT_PASS"
        android:layout_width="360dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:background="@drawable/signin_edit"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="abc"
        />

    <Button
        android:id="@+id/Signin_BTN_Signin"
        android:layout_width="187dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:text="Đăng nhập"
        android:textSize="20dp"
        android:backgroundTint="@color/xanh_la_cay_dam"
        />

</LinearLayout>