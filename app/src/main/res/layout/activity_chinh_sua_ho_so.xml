<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical"
    tools:context=".Activity.ChinhSuaHoSo">
    <TextView
        android:id="@+id/profile_TV_pro"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_weight="1"
        android:layout_marginTop="2dp"
        android:paddingLeft="10dp"
        android:textSize="24sp"
        android:text="Chỉnh sửa hồ sơ"
        android:textStyle="bold"/>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        app:cardCornerRadius="100dp">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:srcCompat="@tools:sample/avatars" />
    </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/profile_TV_TenKH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nguyễn Sinh Hương"

            android:textSize="20sp"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/profile_TV_thaydoi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nguyensinhhuong123@gmail.com"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="italic" />
            <TextView
                android:id="@+id/Regis_Text2"
                android:layout_width="349dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:text="Họ tên đầy đủ:"
                android:textSize="19sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/CSHS_HOTen"
                android:layout_width="370dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/signin_edit"
                android:drawableRight="@drawable/baseline_mode_edit_24"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:paddingEnd="20dp"
                android:text="Nguyễn Sinh Hương"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/Regis_Text3"
                android:layout_width="349dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:text="Ngày sinh:"
                android:textSize="19sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/CSHS_NGAYSINH"
                android:layout_width="370dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/signin_edit"
                android:drawableRight="@drawable/baseline_calendar_month_24"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:paddingEnd="20dp"
                android:text="30-05-2003" />

            <TextView
                android:id="@+id/Regis_Text4"
                android:layout_width="349dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:text="Email:"
                android:textSize="19sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/CSHS_EMAIL"
                android:layout_width="370dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/signin_edit"
                android:drawableRight="@drawable/baseline_email_24"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:paddingEnd="20dp"
                android:text="Nguyensinhhuong123@gmail.com" />
            <TextView
                android:id="@+id/Regis_Text5"
                android:layout_width="349dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:text="Mật khẩu"
                android:textSize="19sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/CSHS_MATKHAU"
                android:layout_width="370dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/signin_edit"
                android:drawableRight="@drawable/baseline_password_24"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:paddingEnd="20dp"
                android:text="0394891491" />
            <TextView
                android:id="@+id/Regis_Text7"
                android:layout_width="349dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:text="CMND/CCCD/Hộ chiếu"
                android:textSize="19sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/CSHS_CMND"
                android:layout_width="370dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/signin_edit"
                android:drawableRight="@drawable/baseline_supervisor_account_24"
                android:inputType="number"
                android:paddingLeft="10dp"
                android:paddingEnd="20dp"
                android:text="635230321313" />
            <TextView
                android:id="@+id/Regis_Text6"
                android:layout_width="349dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:text="Số điện thoại:"
                android:textSize="19sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/CSHS_SDT"
                android:layout_width="370dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/signin_edit"
                android:drawableRight="@drawable/baseline_phone_24"
                android:inputType="phone"
                android:paddingLeft="10dp"
                android:paddingEnd="20dp"
                android:text="0394891491" />
            <TextView
                android:id="@+id/Regis_Text8"
                android:layout_width="349dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:text="Địa chỉ"
                android:textSize="19dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/CSHS_DIACHI"
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                android:background="@drawable/signin_edit"
                android:drawableRight="@drawable/baseline_location_on_24"
                android:inputType="textCapSentences|textMultiLine"
                android:text="Cao Đẳng Nam Sài Gòn, phường 4 , Quận 8, Thành Phố Hồ Chí Minh"
                android:padding="10dp"
                android:paddingEnd="20dp" />

            <Button
                android:id="@+id/CSHS_btnLuuThongTin"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/xanh_la_cay_dam"
                android:text="Lưu Thông Tin"
                android:textSize="20dp" />
</LinearLayout>